n=int(input())
for i in range (n,0,-1):
    if n%2==0:
        for j in range(1,i+1):
            if i%2!=0:
                print(0,end="")
            else:
                print(1,end="")
    else:
        for j in range(1,i+1):
            if i%2!=0:
                print(1,end="")
            else:
                print(0,end="")
    print()
